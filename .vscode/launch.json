{
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/run/bin/greengrass-lite",
      "args": [
        "--config",
        "./nucleus_config.yml",
        "-r",
        "${workspaceRoot}/run"
      ],
      "stopAtEntry": true,
      "cwd": "${workspaceRoot}/run",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "sourceFileMap": {
        "${workspaceFolder}": {
          "editorPath": "${workspaceFolder}",
          "useForBreakpoints": "true"
        }
      }
    }
  ]
}
